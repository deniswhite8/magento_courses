<config>
    <modules>
        <Oggetto_Payment>
            <version>0.1.0</version>
        </Oggetto_Payment>
    </modules>
    <global>
        <models>
            <oggetto_payment>
                <class>Oggetto_Payment_Model</class>
            </oggetto_payment>
        </models>
        <helpers>
            <oggetto_payment>
                <class>Oggetto_Payment_Helper</class>
            </oggetto_payment>
        </helpers>
        <blocks>
            <oggetto_payment>
                <class>Oggetto_Payment_Block</class>
            </oggetto_payment>
        </blocks>
        <events>
            <sales_order_save_after>
                <observers>
                    <add_invoice>
                        <type>singleton</type>
                        <class>oggetto_review/observer</class>
                        <method>orderSaveBefore</method>
                    </add_invoice>
                </observers>
            </sales_order_save_after>
        </events>
    </global>
    <default>
        <payment>
            <oggettopayment>
                <model>oggetto_payment/standard</model>
                <active>1</active>
                <order_status>pending</order_status>
                <title>Oggetto payment</title>
                <payment_action>sale</payment_action>
                <submit_url>http://new.oggy.co/payment/form.php</submit_url>
                <secret_key><![CDATA[ZnVjayB0aGUgZHVjaw==]]></secret_key>
                <allowspecific>0</allowspecific>
                <sort_order>1</sort_order>
            </oggettopayment>
        </payment>
    </default>
    <frontend>
        <routers>
            <oggetto_payment>
                <use>standard</use>
                <args>
                    <module>Oggetto_Payment</module>
                    <frontName>oggetto_payment</frontName>
                </args>
            </oggetto_payment>
        </routers>
    </frontend>

    <phpunit>
        <suite>
            <modules>
                <Oggetto_Payment />
            </modules>
        </suite>
    </phpunit>
</config>